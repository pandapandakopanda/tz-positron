{
  "env": {
      "browser": true,
      "es6": true,
      "node": true
  },
   "parserOptions": {
       "parser": "babel-eslint"
   },
  "extends": [
      "airbnb-base",
      "plugin:vue/recommended"
  ],
  "rules": {
    "semi": ["error", "never"],
    "linebreak-style": 0,
    "quotes": ["error", "single"],
    "vue/html-quotes": [ "error",  "single", { "avoidEscape": false } ],
    "no-console": "off",
    "no-param-reassign": 0
  }
}